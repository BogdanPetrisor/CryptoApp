<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CoinsActivity">

    <TextView
        android:id="@+id/textViewUSDT"
        style="@style/textStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tvTether"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="@dimen/textDimension"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/tvTypeUsdt"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/tvSymbolUsdt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/symbol"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/tvTypeUsdt"
        app:layout_constraintEnd_toStartOf="@+id/tvIsNewUsdt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvNameUsdt"
        tools:layout_editor_absoluteY="600dp" />

    <TextView
        android:id="@+id/tvTypeUsdt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/Type"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tvRankUsdt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/secondGuideLine" />

    <TextView
        android:id="@+id/tvRankUsdt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/rank"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/tvTypeUsdt"
        app:layout_constraintEnd_toStartOf="@+id/tvNameUsdt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvTypeUsdt"
        tools:layout_editor_absoluteY="600dp" />

    <TextView
        android:id="@+id/tvNameUsdt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/name"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/tvTypeUsdt"
        app:layout_constraintEnd_toStartOf="@+id/tvSymbolUsdt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvRankUsdt"
        tools:layout_editor_absoluteY="600dp" />

    <TextView
        android:id="@+id/tvIsNewUsdt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/isNew"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/tvTypeUsdt"
        app:layout_constraintEnd_toStartOf="@+id/tvIsActiveUsdt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvSymbolUsdt"
        tools:layout_editor_absoluteY="600dp" />

    <TextView
        android:id="@+id/tvIsActiveUsdt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/isActive"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/tvTypeUsdt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvIsNewUsdt"
        tools:layout_editor_absoluteY="600dp" />


    <ImageView
        android:id="@+id/tetherImage"
        style="@style/imageStyle"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/tetherContentDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewUSDT"
        app:srcCompat="@drawable/_25" />

    <RelativeLayout
        android:id="@+id/BitcoinLayout"
        android:layout_width="match_parent"
        android:layout_height="183dp"
        android:paddingStart="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/textViewBTC"
            style="@style/textStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvRankBtc"
            android:layout_marginTop="16dp"
            android:text="@string/tvBitcoin"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="@dimen/textDimension"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvRankBtc"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tvSymbolBtc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layoutMarginTop"
            android:layout_toEndOf="@id/tvNameBtc"
            android:paddingEnd="16dp"
            android:text="@string/symbol"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvRankBtc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layoutMarginTop"
            android:layout_toEndOf="@+id/tvTypeBtc"
            android:paddingEnd="16dp"
            android:text="@string/rank"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/tvNameBtc"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tvTypeBtc"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvNameBtc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layoutMarginTop"
            android:layout_toEndOf="@id/tvRankBtc"
            android:paddingEnd="16dp"
            android:text="@string/name"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvIsNewBtc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layoutMarginTop"
            android:layout_toEndOf="@id/tvSymbolBtc"
            android:paddingEnd="16dp"
            android:text="@string/isNew"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvIsActiveBtc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/layoutMarginTop"
            android:layout_toEndOf="@id/tvIsNewBtc"
            android:text="@string/isActive"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTypeBtc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layoutMarginTop"
            android:paddingEnd="16dp"
            android:text="@string/Type"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/bitcoinImage"
            style="@style/imageStyle"
            android:layout_below="@+id/textViewBTC"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/bitcoinContentDescription"
            app:srcCompat="@drawable/opengraph"
            tools:ignore="ImageContrastCheck" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textViewETH"
        style="@style/textStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tvEthereum"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="@dimen/textDimension"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/tvTypeEth"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/tvNameEth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/name"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tvSymbolEth"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvRankEth"
        app:layout_constraintTop_toTopOf="@+id/tvTypeEth"
        tools:layout_editor_absoluteY="351dp" />

    <TextView
        android:id="@+id/tvTypeEth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/Type"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tvRankEth"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/firstGuideline" />

    <TextView
        android:id="@+id/tvRankEth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/rank"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tvNameEth"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvTypeEth"
        app:layout_constraintTop_toTopOf="@+id/tvTypeEth"
        tools:layout_editor_absoluteY="351dp" />

    <TextView
        android:id="@+id/tvSymbolEth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/symbol"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tvIsNewEth"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvNameEth"
        app:layout_constraintTop_toTopOf="@+id/tvTypeEth"
        tools:layout_editor_absoluteY="351dp" />

    <TextView
        android:id="@+id/tvIsNewEth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/isNew"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tvIsActiveEth"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvSymbolEth"
        app:layout_constraintTop_toTopOf="@+id/tvTypeEth"
        tools:layout_editor_absoluteY="351dp" />

    <TextView
        android:id="@+id/tvIsActiveEth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/isActive"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvIsNewEth"
        app:layout_constraintTop_toTopOf="@+id/tvTypeEth"
        tools:layout_editor_absoluteY="351dp" />

    <ImageView
        android:id="@+id/ethereumImage"
        style="@style/imageStyle"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/ethereumContentDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewETH"
        app:srcCompat="@drawable/ethereum_logo_translucent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/firstGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.33"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/secondGuideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.66" />


</androidx.constraintlayout.widget.ConstraintLayout>