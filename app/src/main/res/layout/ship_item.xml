<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/shipImage"
        android:contentDescription="@string/ship_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/shipName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:ellipsize="end"
        android:maxWidth="80dp"
        android:maxLines="1"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="@id/shipImage"
        app:layout_constraintStart_toStartOf="@id/shipImage"
        app:layout_constraintTop_toBottomOf="@id/shipImage" />


</androidx.constraintlayout.widget.ConstraintLayout>