<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_doodle_extended">

    <ImageView
        android:id="@+id/posterImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/title_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Title:"
        app:layout_constraintTop_toBottomOf="@id/posterImage"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/title"
        style="@style/label_description_style" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Prison Break"
        app:layout_constraintTop_toTopOf="@id/title_label"
        app:layout_constraintStart_toEndOf="@id/title_label"
        android:layout_marginStart="16dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/overview_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Overview:"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/overview"
        style="@style/label_description_style" />

    <TextView
        android:id="@+id/overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Prison Break sssss aaaa"
        app:layout_constraintTop_toTopOf="@id/overview_label"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@id/overview_label"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/air_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Air date:"
        app:layout_constraintTop_toBottomOf="@id/overview"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/air_date"
        style="@style/label_description_style" />

    <TextView
        android:id="@+id/air_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Prison Break sssss aaaa"
        app:layout_constraintTop_toTopOf="@id/air_date_label"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@id/air_date_label"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/popularity_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Popularity:"
        app:layout_constraintTop_toBottomOf="@id/air_date"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/popularity"
        style="@style/label_description_style" />

    <TextView
        android:id="@+id/popularity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Prison Break sssss aaaa"
        app:layout_constraintTop_toTopOf="@id/popularity_label"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@id/popularity_label"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        tools:ignore="UnknownId" />

    <ImageView
        android:id="@+id/backdrop_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/popularity"
        app:layout_constraintStart_toStartOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>